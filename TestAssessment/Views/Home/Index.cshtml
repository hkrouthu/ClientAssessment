@{
    ViewBag.Title = "Assessment";
}
<style>
    table, tr, td, th {
        border: 1px solid #ccc;
        padding: 10px;
        margin: 10px;
    }
</style>
<h2>Welcome to Hari Assessment</h2>
<body data-ng-app="APIModule">
    <div id="tblTrainings" ng-controller="APIController">
        <table>
            <tr>
                <th>ID</th>
                <th>Training Name</th>
                <th>Start Date</th>
                <th>End Date</th>                
            </tr>
            <tbody data-ng-repeat="train in training">
                <tr>
                    <td>{{train.TrainingID}}</td>
                    <td>{{train.TrainingName}}</td>
                    <td>{{train.StartDate | date :'dd-MM-yyyy'}}</td>
                    <td>{{train.EndDate | date :'dd-MM-yyyy'}}</td> 
                </tr>
            </tbody>
        </table>
        <div class="form-group">
            <input type="text" class="form-control" id="traing1" placeholder="Enter Training Name" [required="string" ] data-ng-model="trainingname" />
            <input type="date" class="form-control" id="traing2" placeholder="Enter Training Start Date" [required="string" ] data-ng-model="startdate"  />
            <input type="date" class="form-control" id="traing3" placeholder="Enter Training End Date" [required="string" ] data-ng-model="enddate" />
        </div>
        <button type="button" class="btn btn-default" data-ng-click="saveTraings();">Submit</button>
    </div>
</body>
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/angular-route.js"></script>
<script src="~/Scripts/APIScripts/Module.js"></script>
<script src="~/Scripts/APIScripts/Service.js"></script>
<script src="~/Scripts/APIScripts/Controller.js"></script>